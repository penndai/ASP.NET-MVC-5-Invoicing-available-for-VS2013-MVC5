@using MvcPaging;

@model IPagedList<Provider>

@{
    ViewBag.Title = "Index";
}

<div id="ajaxResponse">

    <h1>List <small>of Provider</small></h1>

    <p>
        @Html.ActionLink("[+] Create New", "Create", null, new { @class = "btn primary" })
    </p>

    @{Html.RenderPartial("SearchBoxCompany", "Provider");}

    <div class="pagingContainer">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
    </div>

    <table class="zebra-striped">
        <thead>
            <th>
                Name
            </th>
            <th>
                CompanyNumber
            </th>
   
            <th>
                City
            </th>
            <th>
                Phone1
            </th>
     
            <th>
                Email
            </th>
            <th width="160"></th>
        </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyNumber)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td nowrap>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProviderID }, new { @class = "btn primary" }) 
                @Html.ActionLink("Details", "Details", new { id = item.ProviderID }, new { @class = "btn" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.ProviderID }, new { @class = "btn" })
            </td>
        </tr>
    }

    </table>

</div>